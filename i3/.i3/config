# Default modkey
set $mod Mod4

# Hide titlebar
new_window pixel

# Font for window titles.
font pango: SauceCodePro Nerd Font 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Start a terminal
bindsym $mod+Return exec st

